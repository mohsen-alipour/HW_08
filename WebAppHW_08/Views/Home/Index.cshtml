@model List<PersonModel>;

@{
    ViewData["Title"] = "Home Page";
    int i = 1;
}

<table class="table table-dark table-striped">
     <tr>
        <th>شماره ردیف</th>
        <th>شناسه شخص</th>
        <th>نام</th>     
        <th>عملیات</th>
    </tr>
     @foreach(var item in Model)
    {       
        <tr>
        <th>@i</th>
        <th>@item.Id</th>
        <th>@item.Name</th>     
        <th>
            <a class="btn btn-danger"asp-area=""asp-controller="Home"asp-action="Delete"asp-route-id="@item.Id">حذف</a>
            <a class="btn btn-primary"asp-area=""asp-controller="Home"asp-action="Edit"asp-route-id="@item.Id">ویرایش</a>
        </th>
         
        </tr>
        i++;
    }
</table>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
